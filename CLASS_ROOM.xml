<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_room"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.blackbox.auto.ClassRoom"
    android:background="@drawable/classroombg2">


    <ToggleButton
        android:text="@android:string/unknownName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/monitor"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textOff="Monitor"
        android:textOn="Monitoring..."
        android:textAllCaps="false" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"

        android:id="@+id/gridLayout"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="1"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:layout_marginRight="12dp"
            android:id="@+id/button1"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />
        <Button
            android:text="2"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:layout_marginRight="12dp"
            android:id="@+id/button2"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />
        <Button
            android:text="3"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:id="@+id/button3"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />
        <Button
            android:text="4"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:id="@+id/button4"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />
        <Button
            android:text="5"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:id="@+id/button5"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />
        <Button
            android:text="6"
            android:layout_width="86dp"
            android:layout_height="66dp"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp"
            android:id="@+id/button6"
            android:background="@drawable/index3"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="40sp" />



    </GridLayout>

    <RadioButton
        android:text="Test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test1"
        android:layout_below="@+id/monitor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:cursorVisible="false"
        android:contextClickable="true"
        android:checked="true"
        android:textColorLink="#fa697d"
        android:buttonTint="#fa697d"/>


    <RadioButton
        android:text="Test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test2"
        android:layout_below="@+id/test1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:textColorLink="#fa697d"
        android:buttonTint="#fa697d"/>

    <RadioButton
        android:text="Test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test3"
        android:layout_below="@+id/test2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:textColorLink="#fa697d"
        android:buttonTint="#fa697d"/>





</RelativeLayout>